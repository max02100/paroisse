<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:weightSum="5"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        android:layout_marginTop="8dp">

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/evangileButton"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/evangile"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_weight="1"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        android:layout_marginTop="8dp">

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newsButton"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/news"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:scaleType="fitXY"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        android:layout_marginTop="8dp">

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/horairesButton"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/horaires"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:scaleType="fitXY"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        android:layout_marginTop="8dp">

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mouvementsButton"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/mouvements"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:scaleType="fitXY"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom"
        android:weightSum="3"
        android:layout_weight="1"
        android:layout_marginTop="8dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uselessButton"
            android:src="@drawable/useless"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_margin="8dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/identiteButton"
            android:src="@drawable/identite"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_margin="8dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plusButton"
            android:src="@drawable/plus"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_margin="8dp" />
    </LinearLayout>
</LinearLayout><!-- From: file:/C:/Users/maximevin/Documents/Android%20projects/Paroisse%20St%20Rieul/ParseStarterProject/src/main/res/layout/activity_choice.xml -->